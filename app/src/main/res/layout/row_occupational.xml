<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/c_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#e8e8e8"
    cardview:cardCornerRadius="10dp"
    cardview:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@color/myWhite"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageViewLogo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvunit_label"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:text="ABC COnsulting Company Limted"
                    android:textAllCaps="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/myWhite" />

                <TextView
                    android:id="@+id/tvMajor"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/locale"
                    android:drawableLeft="@drawable/iconmonstr_stop_7_16"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="tvMajor"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvSubMajor"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/locale"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/iconmonstr_stop_7_16"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="tvSubMajor"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvMinor"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/locale"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@drawable/iconmonstr_stop_7_16"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="tvMinor"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#000" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>