                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="AMOUNT"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                                android:textColor="@color/grey_40" />

                            <TextView
                                android:id="@+id/sum_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="$1500.0"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:textColor="@color/grey_80"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Tshs"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                            android:textColor="@color/grey_40" />

                    </LinearLayout>

                    <TextView
                        android:text=" Choose Payments Option.\nNote Payment SIMCARD needs to be on this device"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                    </TextView>


                    <androidx.cardview.widget.CardView

                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="20dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="20dp">

                            <LinearLayout
                                android:id="@+id/linearMpesa"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">



                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/card_logo"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/mpesa" />

                            <View
                                android:layout_width="20dp"
                                android:layout_height="0dp" />
                            <TextView
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"
                                android:text="MPESA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearTigoPesa"
                                android:layout_marginStart="50dp"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">



                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/card_tigopes"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/tigopesa" />

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="0dp" />
                                <TextView
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="TIGO PESA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>

                            </LinearLayout>







                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView

                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="20dp"
                            android:paddingTop="5dp">

                            <LinearLayout
                                android:id="@+id/linearAirtel"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">



                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/card_airtelmoney"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/airtelmoney" />


                                <TextView
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="AIRTEL MONEY"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lineaHalopesa"
                                android:layout_marginStart="50dp"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">



                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/card_halopes"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/halopesa" />

                                <View
                                    android:layout_width="20dp"
                                    android:layout_height="0dp" />
                                <TextView
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="HALO PESA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </TextView>

                            </LinearLayout>







                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:backgroundTint="@color/overlay_light_30"
            app:elevation="0dp"
            app:fabSize="normal"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_close">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

